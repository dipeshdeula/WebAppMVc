
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<h3>@ViewBag.Message</h3>
<p>There are @ViewBag.CustomerCount customers added into the list.</p>
<table>
    <thead>
        <tr>
            <th>Customer Id</th>
            <th>Customer Name</th>
            <th>Customer Amount</th>
        </tr>

    </thead>

    <tbody>
        @foreach (var item in ViewBag.CustomerList)
        {
            
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Amount</td>
            </tr>
        }

    </tbody>
</table>

